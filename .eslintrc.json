{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "standard"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": ["**/tsconfig.json"]
    },
    "plugins": ["@typescript-eslint"],
    "ignorePatterns": ["**/build/*", "**/node_modules/*", "**/public/*", "**/tsconfig.json"],
    "overrides": [
        {
            "files": ["**/*.{js,mjs,cjs,ts}"]
        },
        {
            "files": ["**/*.js"],
            "languageOptions": {
                "sourceType": "script"
            }
        }
    ],
    "rules": {
        "@typescript-eslint/restrict-template-expressions": "off"
    },
    "settings": {
        "globals": {
            "node": true
        }
    }
}
